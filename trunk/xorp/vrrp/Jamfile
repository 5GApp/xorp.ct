SubDir TOP vrrp ;
SubIncludeOnce TOP libxorp ;
SubIncludeOnce TOP libcomm ;
SubIncludeOnce TOP xrl interfaces ;
SubIncludeOnce TOP xrl targets ;
SubIncludeOnce TOP libfeaclient ;
SubIncludeOnce TOP libxipc ;
SubDir TOP vrrp ;

Library libvrrp : 
	vrrp.cc vrrp_packet.cc vrrp_target.cc vrrp_vif.cc
	;

Main xorp_vrrp : xorp_vrrp.cc ;
LinkLibraries xorp_vrrp : 
	libvrrp
	libvrrpbase
	libfeaclient
	libfeaifmgrxif
	libfeaifmgrmirrorxif
	libfeaifmgrreplicatorxif
	libfearawlinkxif
	libfearawpkt4xif
	libfeaifmgrmirrorbase
	libxipc
	libproto
	libcomm
	libxorp
	;

InstallBin $(PREFIX)/vrrp : xorp_vrrp ;

SubDir TOP cli tools ;

SubIncludeOnce TOP libxorp ;
SubIncludeOnce TOP libcomm ;
SubIncludeOnce TOP xrl interfaces ;
SubIncludeOnce TOP xrl targets ;
SubIncludeOnce TOP libxipc ;

SubDir TOP cli tools ;

Main cli_generic : cli_generic.cc ;
Main send_cli_processor_xrl : send_cli_processor_xrl.cc ;

LinkLibraries cli_generic :
	libxipc
	libcomm
	libxorp
        ;

LinkLibraries send_cli_processor_xrl :
	libcliprocessorxif
	libxipc
	libcomm
	libxorp
        ;

# XXX: $(PREFIX)$(SUBDIR) introduces a period.
InstallBin $(PREFIX)/cli/tools : cli_generic send_cli_processor_xrl ;

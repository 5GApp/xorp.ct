protocols {
    bgp {
	bgp-id: 192.150.187.100
	local-as: 65002

	peer xorp-c4000 {
	    local-ip: 192.150.187.100
	    as: 65000
	    holdtime: 90
	    next-hop: 192.150.187.100
	    enabled: true

	    enable-ipv4-multicast

            enable-ipv6-unicast
            enable-ipv6-multicast
	}

	network4 192.150.187.100/25 {
	    next-hop: 192.150.187.100
	    unicast: true
	    multicast: true
	}

	network6 20:20:20:20::/64 {
	    next-hop: 30:30:30:30:30:30:30:30
	    unicast: true
	    multicast: true
	}
    }
}


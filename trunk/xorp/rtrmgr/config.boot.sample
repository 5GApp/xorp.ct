/* $XORP: xorp/rtrmgr/config.boot.sample,v 1.8 2004/06/08 01:00:11 atanu Exp $ */


interfaces {
    interface fxp0 {
	description: "control interface"
	/* default-system-config */
	vif fxp0 {
	    address 192.150.187.100 {
		prefix-length: 24
		broadcast: 192.150.187.255
	    }
	}
    }
}

fea {
    enable-unicast-forwarding4: true
    /* enable-unicast-forwarding6: true */
}

protocols {
    rip {
	interface fxp0 {
	    vif fxp0 {
		address 192.150.187.100 {
		    enabled: true
		}
	    }
	}
    }
}


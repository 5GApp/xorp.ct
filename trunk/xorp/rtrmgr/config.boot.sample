/* $XORP: xorp/rtrmgr/config.boot.sample,v 1.7 2004/05/16 07:15:16 pavlin Exp $ */


interfaces {
    interface fxp0 {
	description: "control interface"
	/* default-system-config */
	vif fxp0 {
	    address 192.150.187.100 {
		prefix-length: 24
		broadcast: 192.150.187.255
	    }
	}
    }
}

fea {
    enable-unicast-forwarding4: true
    /* enable-unicast-forwarding6: true */
}

/*

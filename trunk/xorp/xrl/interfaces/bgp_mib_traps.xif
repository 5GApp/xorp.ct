/*
** XRL interface to send SNMP traps for BGP MIB (RFC 1657)
*/

interface bgp_mib_traps/0.1 {
	/**
	 *  Send bgpEstablished trap
	 */
	send_bgp_established_trap \
		? \
		bgp_last_error:txt \
		& bgp_state:u32

	/**
	 * Send bgpBackwardTransition trap
	 */
        send_bgp_backward_transition_trap \
		? \
		bgp_last_error:txt \
		& bgp_state:u32
}

    %command: "bgp/tools/xorpsh_print_routes -6 -u" %help: "Print BGP routes";
    %module: bgp;
    %opt_parameter: "summary" %help: "Print summary of BGP routes";
    %opt_parameter: "detail" %help: "Print detailed BGP routes";
}

show bgp routes ipv6 unicast {
    %command: "bgp/tools/xorpsh_print_routes -6 -u" %help: "Print BGP routes";
    %module: bgp;
    %opt_parameter: "summary" %help: "Print summary of BGP routes";

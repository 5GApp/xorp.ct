show bgp peers {
    %command: "bgp/tools/xorpsh_print_peers" %help: "Show BGP peers info";
    %module: bgp;
    %opt_parameter: "detail" %help: "Show detailed BGP peers info";
}

show bgp routes {
    %command: "bgp/tools/xorpsh_print_routes -4 -u" %help: "Print BGP routes";
    %module: bgp;
    %opt_parameter: "summary" %help: "Print summary of BGP routes";
    %opt_parameter: "detail" %help: "Print detailed BGP routes";
}

show bgp routes ipv4 {
    %command: "bgp/tools/xorpsh_print_routes -4 -u" %help: "Print BGP routes";
    %module: bgp;
    %opt_parameter: "summary" %help: "Print summary of BGP routes";
    %opt_parameter: "detail" %help: "Print detailed BGP routes";
}

show bgp routes ipv4 unicast {
    %command: "bgp/tools/xorpsh_print_routes -4 -u " %help: "Print BGP routes";
    %module: bgp;
    %opt_parameter: "summary" %help: "Print summary of BGP routes";
    %opt_parameter: "detail" %help: "Print detailed BGP routes";
}

show bgp routes ipv4 multicast {
    %command: "bgp/tools/xorpsh_print_routes -4 -m" %help: "Print BGP routes";
    %module: bgp;
    %opt_parameter: "summary" %help: "Print summary of BGP routes";
    %opt_parameter: "detail" %help: "Print detailed BGP routes";
}


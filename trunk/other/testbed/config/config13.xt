# $XORP: other/testbed/config/config13.xt,v 1.1 2006/12/14 01:26:29 pavlin Exp $
#
# Shared testbed configuration:
#
# xorp0, xorp1, xorp2, xorp4, xorp8 - Multicast testing. Pavlin.
# xorp7 - Unused
# xorp12 - Full loaded XORP configuration testing.
#
#
#                      xorp7
#                        t3
#                        |
#                        |
#                        |
#                        |
#                        t3
#   |---------------t0.xorp12.t2---------------|
#   |                    t1                    |
#   |                    |                     |
#   |                    |                     |
#   |                    |                     |
#   |                    |                     |
#   |                    t2                    |
#   |         |-----t1.xorp1.t3----|           |
#   |         |          t4        |           |
#   |         |          |         |           |
#   |         |          |         |           |
#   |         |          |         |           |
#   |         |          |         |           |
#   t0        |          t1        |           t1
# xorp0.t1----+-----t0.xorp8.t2----+------t0.xorp4
#   t2        |          t3        |
#   |         |          |         |
#   |         |          |         |
#   |         |          |         |
#   |         |          |         |
#   |         |          t2        |
#   |         |-----t1.xorp2.t3----|
#   |                    t0
#   |                    |
#   |                    |
#   |--------------------|
#
#

# Kernel to install
kernel[/home/xorpc/u2/freebsd.kernels/kernel] = xorp0, xorp1, xorp2, xorp4, xorp7

#
# Linux multicast kernel
#kernel[/home/xorpc/u2/homes/pavlin/kernel.linux.xorp4] = xorp4

# xorp12 is the router. This will create default routes that point at xorp12.
router = xorp12

# A star around the router xorp12
vlan[net 172.16.0.1/24] = xorp12.t0[172.16.0.1], xorp0.t0[172.16.0.2]
vlan[net 172.16.1.1/24] = xorp12.t1[172.16.1.1], xorp1.t2[172.16.1.2]
vlan[net 172.16.2.1/24] = xorp12.t2[172.16.2.1], xorp4.t1[172.16.2.2]
vlan[net 172.16.3.1/24] = xorp12.t3[172.16.3.1], xorp7.t3[172.16.3.2]

vlan[net 10.1.0.0/16] = xorp0.t1[10.1.100.1], xorp1.t1[10.1.1.1], xorp2.t1[10.1.2.1], xorp8.t0[10.1.8.100]

vlan[net 10.2.0.0/16] = xorp0.t2[10.2.100.2], xorp2.t0[10.2.2.100]

vlan[net 10.4.0.0/16] = xorp1.t3[10.4.1.3], xorp2.t3[10.4.2.3], xorp4.t0[10.4.4.100], xorp8.t2[10.4.8.2]

vlan[net 10.5.0.0/16] = xorp1.t4[10.5.1.3], xorp8.t1[10.5.8.1]

vlan[net 10.6.0.0/16] = xorp2.t2[10.6.2.2], xorp8.t3[10.6.8.3]
